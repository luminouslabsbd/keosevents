{% extends "Global/layout.html.twig" %}

{% set pagetitle = 'Train Text Bot' | trans %}

{% block title %}{{ pagetitle }}{% endblock %}

{% block content %}

    {% set navigation = [{"dashboard_index": "Dashboard"|trans,"current":(pagetitle)}] %}
    {% include "Global/navigation.html.twig" with navigation %}

    <section class="section-content padding-y bg-white">
        <div class="{{ services.getSetting("app_layout") }}">
            <div class="row">
                <aside class="col-lg-3 pt-3 pt-lg-0">
                    {% include "Dashboard/sidebar.html.twig" %}
                </aside>
                <div class="col-lg-9 mt-4 mt-lg-0">

                    <form action="{{ path('chatbot_train_store',{"type":"attachment"}) }}" method="post" enctype="multipart/form-data">
                        <div class="card shadow">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center gap-5">
                                    <h3>Train Text Bot</h3>
                                    <button type="submit" class="btn btn-info rounded">Train</button>
                                </div>
                                <div class="mt-5">


                                    <div class="attach_append">
                                        <div class="attach_child my-5">
                                            <div class="mb-2">
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <select class="form-control" name="bot_select[]" id="bot_select">
                                                            <option value="" disabled selected>Select A Bot</option>
                                                            {% for bot in bots %}
                                                                <option value="{{ bot['id'] }}">{{ bot['name'] }}</option>
                                                            {% endfor %}
                                                        </select>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <input type="file" name="file[]" accept=".txt" class="form-control">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="mb-2">
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <textarea name="text[]" placeholder="Write text for train your chatbot" class="form-control"></textarea>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <a href="javascript:void(0)" class="btn btn-success add_more_btn">Add More</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>



                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

{% endblock %}


{% block javascripts %}
    <script type="module">
        import Chatbot from "https://cdn.jsdelivr.net/npm/flowise-embed/dist/web.js";
        $(document).on('change','#bot_select', function(){
            var chat_id = $(this).val();
            Chatbot.init({
                chatflowid: `${chat_id}`,
                apiHost: "https://a056-2a01-4ff-f0-dc64-00-1.ngrok-free.app",
            })
        })
    </script>

    <script>
        $(document).ready(function(){
            $('.add_more_btn').click(function(){
                $('.attach_append').append(`
                   <div class="attach_child my-5">
                        <div class="mb-2">
                            <div class="row">
                                <div class="col-md-6">
                                    <select class="form-control" name="bot_select[]" id="bot_select">
                                        <option value="" disabled selected>Select A Bot</option>
                                        {% for bot in bots %}
                                            <option value="{{ bot['id'] }}">{{ bot['name'] }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <input type="file" name="file[]" accept=".txt" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="mb-2">
                            <div class="row">
                                <div class="col-md-6">
                                    <textarea name="text[]" placeholder="Write text for train your chatbot" class="form-control"></textarea>
                                </div>
                                <div class="col-md-6">
                                    <a href="javascript:void(0)" class="btn btn-danger remove_btn">Remove</a>
                                </div>
                            </div>
                        </div>
                    </div>  
                `)
            })


            $(document).on('click', '.remove_btn', function(){
                $(this).parent().parent().parent().parent().remove()
            })
        })
    </script>
{% endblock %}
